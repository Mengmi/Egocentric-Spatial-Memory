<gazebo reference="hokuyo_link1">
    <sensor type="ray" name="laser">
      <pose>0 0 0.0 0 0 0</pose>
      <visualize>
	true
      </visualize>
      <update_rate>40</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1081</samples>
            <resolution>1</resolution>
            <min_angle>-1.3</min_angle>
            <max_angle>1.3</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.50</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <!-- Noise parameters based on published spec for Hokuyo laser
               achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
               stddev of 0.01m will put 99.7% of samples within 0.03m of the true
               reading. -->
          <mean>0.0</mean>
          <stddev>0.00</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_uav" filename="libgazebo_ros_laser.so">
        <topicName>/myRobot/laser_scan1</topicName>
        <frameName>hokuyo_link1</frameName>
      </plugin>
    </sensor>
  </gazebo>

